{
    "version": "1.0.0",
    "description": "Synchronize Markdown documentation with Confluence",
    "homepage": "https://github.com/yourusername/consync",
    "license": "MIT",
    "notes": [
        "ConSync requires Java 17 or higher.",
        "Install Java: scoop install openjdk17",
        "",
        "Set up authentication:",
        "For Confluence Cloud:",
        "  $env:CONFLUENCE_USERNAME = 'your-email@example.com'",
        "  $env:CONFLUENCE_API_TOKEN = 'your-api-token'",
        "",
        "For Confluence Data Center/Server:",
        "  $env:CONFLUENCE_PAT = 'your-personal-access-token'",
        "",
        "Get started: consync --help"
    ],
    "suggest": {
        "JDK": "java/openjdk17"
    },
    "url": "https://github.com/yourusername/consync/releases/download/v1.0.0/consync-1.0.0-windows.zip",
    "hash": "REPLACE_WITH_ACTUAL_SHA256",
    "extract_dir": "consync-1.0.0-windows",
    "bin": "consync.bat",
    "shortcuts": [
        [
            "consync.bat",
            "ConSync"
        ]
    ],
    "checkver": {
        "github": "https://github.com/yourusername/consync"
    },
    "autoupdate": {
        "url": "https://github.com/yourusername/consync/releases/download/v$version/consync-$version-windows.zip",
        "extract_dir": "consync-$version-windows",
        "hash": {
            "url": "$url.sha256"
        }
    },
    "post_install": [
        "Write-Host 'ConSync installed successfully!' -ForegroundColor Green",
        "Write-Host ''",
        "Write-Host 'Configure authentication by setting environment variables:' -ForegroundColor Yellow",
        "Write-Host '  For Cloud: CONFLUENCE_USERNAME and CONFLUENCE_API_TOKEN'",
        "Write-Host '  For Server: CONFLUENCE_PAT'",
        "Write-Host ''",
        "Write-Host 'Run: consync --help' -ForegroundColor Cyan"
    ]
}
