# ConSync Environment Configuration
# Copy this file to .env and update with your values
# The .env file should NOT be committed to version control

# ===========================================
# Confluence Cloud Configuration
# ===========================================

# Confluence base URL (e.g., https://your-domain.atlassian.net/wiki)
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net/wiki

# Confluence username (your email address for Cloud)
CONFLUENCE_USERNAME=your.email@company.com

# Confluence API token (generate at https://id.atlassian.com/manage-profile/security/api-tokens)
CONFLUENCE_API_TOKEN=your-api-token-here

# ===========================================
# Confluence Data Center / Server Configuration
# (Use these instead of username/api_token for DC/Server)
# ===========================================

# Personal Access Token for Confluence Data Center/Server
# CONFLUENCE_PAT=your-personal-access-token

# ===========================================
# Space Configuration
# ===========================================

# Target space key in Confluence
CONFLUENCE_SPACE_KEY=DOCS

# Root page ID (optional - the parent page for all synced content)
# CONFLUENCE_ROOT_PAGE_ID=123456

# Root page title (alternative to ID - will be looked up)
# CONFLUENCE_ROOT_PAGE_TITLE=Documentation

# ===========================================
# Sync Configuration
# ===========================================

# Content directory (default: current directory)
# CONSYNC_CONTENT_DIR=./docs

# Delete orphaned pages in Confluence (pages removed locally)
# CONSYNC_DELETE_ORPHANS=false

# Force update all pages regardless of content changes
# CONSYNC_FORCE_SYNC=false

# ===========================================
# Logging Configuration
# ===========================================

# Log level: debug, info, warn, error
CONSYNC_LOG_LEVEL=info

# ===========================================
# Development / Testing
# ===========================================

# Enable dry-run mode by default (no actual changes)
# CONSYNC_DRY_RUN=true
